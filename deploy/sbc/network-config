# deploy/sbc/network-config
#
# cloud-init network configuration for Raspberry Pi.
#
# This file sets a static IPv4 address on the ethernet adapter.
# You can optionally add a Wi-Fi config under `wifis.wlan0`.
# Edit the values below to match your network, then copy this file
# to the SD card boot partition as "network-config" (no extension).
#
# See deploy/sbc/README.md for full instructions.

network:
  version: 2
  ethernets:
    eth0:
      dhcp4: false
      dhcp6: false
      optional: true
      addresses:
        - 192.168.1.50/24
      routes:
        - to: default
          via: 192.168.1.1
      nameservers:
        addresses:
          - 8.8.8.8
          - 8.8.4.4

# Optional Wi-Fi example:
#   wifis:
#     wlan0:
#       dhcp4: true
#       optional: true
#       regulatory-domain: 'US'
#       access-points:
#         'YourSSID':
#           password: 'YourPassword'
